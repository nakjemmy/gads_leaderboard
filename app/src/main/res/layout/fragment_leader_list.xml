<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_gravity="center">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_learning_leaders"
        android:name="com.nakjemmy.leaderboard.LearningLeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#FAFAFA"
        app:layoutManager="LinearLayoutManager"
        tools:context=".LearningLeaderFragment"
        tools:listitem="@layout/fragment_leader" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorOrange"
        android:visibility="visible" />


</FrameLayout>